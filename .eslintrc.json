{
    "extends": "airbnb-base",
    "rules": {
      "no-else-return": ["error", { "allowElseIf": true }]
    },
    "plugins": [
      "json"
    ],
    "overrides": [
      {
        "files": [ "*.test.js" ],
        "rules": {
          "no-undef": 0
        }
      },
      {
        "files": [ "*.js" ],
        "rules": {
          "import/prefer-default-export": 0
        }
      },
      {
        "files": [ "*" ],
        "rules": {
          "linebreak-style": 0
        }
      }
    ]
}